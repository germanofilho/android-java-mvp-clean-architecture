<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/cardview_checkout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_car"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginEnd="@dimen/medium_margin"
            android:scaleType="fitCenter" />

        <TextView
            android:id="@+id/txt_title_car"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_marginTop="@dimen/small_margin"
            android:layout_toEndOf="@+id/img_car"
            android:ellipsize="end"
            android:textSize="@dimen/material_text_title"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_title_car"
            android:layout_marginBottom="@dimen/small_margin"
            android:layout_toEndOf="@+id/img_car"
            android:textSize="@dimen/material_text_subhead" />

        <TextView
            android:id="@+id/txt_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_brand"
            android:layout_toEndOf="@+id/img_car"
            android:textColor="@color/colorAccent"
            android:layout_marginBottom="@dimen/small_margin"
            android:textSize="@dimen/material_text_subhead"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_price"
            android:layout_toEndOf="@+id/img_car"
            android:textSize="@dimen/material_text_subhead"
            android:layout_marginBottom="@dimen/medium_margin"
            android:textStyle="bold" />


        <ImageView
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignBottom="@+id/txt_quantity"
            android:layout_alignParentEnd="true"
            android:padding="@dimen/xx_small_padding"
            android:layout_marginEnd="@dimen/medium_margin"
            android:src="@drawable/ic_delete" />
    </RelativeLayout>
</android.support.v7.widget.CardView>